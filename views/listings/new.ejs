<% layout("./layouts/boilerplate") %>

<div class="row mt-3 mb-3">
  <div class="col-8 offset-2">
    <h1>Create a new listing</h1>
    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          id="title"
          required
        />
        <div class="valid-feedback">Title looks good.</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Wether and climate"
          class="form-control"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">Discription should be valid.</div>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Select Category</label>
        <select
          class="form-select form-select-lg mb-3"
          id="category"
          name="listing[category]"
        >
          <option selected value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic Cities">Iconic Cities</option>
          <option value="Mountain">Mountain</option>
          <option value="Castles">Castles</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="Top of the world">Top of the world</option>
          <option value="Farm">Farm</option>
          <option value="Arctic">Arctic</option>
          <option value="Hospitals">Hospitals</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="image"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Price should be valid.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            id="country"
            required
          />
          <div class="invalid-feedback">Country should be valid.</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Jaypur, Rajasthan"
          class="form-control"
          id="location"
          required
        />
        <div class="invalid-feedback">Location should be valid.</div>
      </div>
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
