<% layout("./layouts/boilerplate") %>
<!-- <h1>All Listings</h1> -->

<div class="all-filters">
  <div class="sliderbar">
    <div class="mt-3 slide-container swiper">
      <div class="slide-content">
        <div class="swiper-wrapper" id="filters">
          <div class="filter swiper-slide">
            <a href="/listings?category=Trending" class="filter-link">
              <i class="fa-solid fa-fire"></i>
              <p>Trending</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Rooms" class="filter-link">
              <i class="fa-solid fa-bed"></i>
              <p>Rooms</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Iconic Cities" class="filter-link">
              <i class="fa-solid fa-mountain-city"></i>
              <p>Iconic Cities</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Mountain" class="filter-link">
              <i class="fa-solid fa-mountain-sun"></i>
              <p>Mountain</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Castles" class="filter-link">
              <i class="fa-brands fa-fort-awesome"></i>
              <p>Castles</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Amazing Pools" class="filter-link">
              <i class="fa-solid fa-person-swimming"></i>
              <p>Amazing Pools</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Top of the world" class="filter-link">
              <i class="fa-solid fa-earth-americas"></i>
              <p>Top of the world</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Farm" class="filter-link">
              <i class="fa-solid fa-tractor"></i>
              <p>Farm</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Arctic" class="filter-link">
              <i class="fa-regular fa-snowflake"></i>
              <p>Arctic</p>
            </a>
          </div>
          <div class="filter swiper-slide">
            <a href="/listings?category=Hospitals" class="filter-link">
              <i class="fa-solid fa-hospital"></i>
              <p>Hospitals</p>
            </a>
          </div>
        </div>
      </div>
      <div class="swiper-button-next swiper-navBtn"></div>
      <div class="swiper-button-prev swiper-navBtn"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) {%>
  <a href="/listings/<%= listing.id %>" class="listing-link">
    <div class="card col-2 mb-5">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %> <br />
          Rs.<%= listing.price %> /night
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
