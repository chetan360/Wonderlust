<% layout("./layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
  </div>
  <div class="card col-6 offset-2">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
      style="height: 20rem"
    />
    <div class="card-img-overlay"></div>
  </div>

  <p class="card-text offset-2">
    <%= listing.description %> <br />
    Rs.<%= listing.price %> /night <br />
    <%= listing.location %> <br />
    <%= listing.country %>
  </p>
  <div class="btns offset-2 mb-3">
    <a href="/listings/<%= listing.id %>/edit" class="btn edit-btn">Edit</a
    ><br />
    <form method="post" action="/listings/<%= listing.id %>?_method=delete">
      <button class="btn btn-dark" style="margin-left: 15px">Delete</button>
    </form>
  </div>
  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4>Leave a review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div>
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <label for="comment" class="form-label">Comment:</label>
      <textarea
        id="comment"
        name="review[comment]"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please submit some comment for review.</div>
      <button class="btn btn-outline-dark mt-3">Submit</button>
    </form>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="reviews">
      <% for(review of listing.reviews) {%>
      <div class="card col-5 review-card" style="width: 25rem">
        <div class="card-body">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text">
            <%= review.comment %><br />
            <%= review.rating %> stars
          </p>
        </div>
        <form
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-danger mb-1 mt-1">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
  </div>
</div>
